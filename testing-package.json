{
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.{js,ts,tsx}'",
    "test:integration": "jest --testMatch='**/__tests__/**/*.integration.test.{js,ts,tsx}'",
    "test:health": "node scripts/health-check.js",
    "build:test": "npm run build && npm run test:e2e",
    "lint:test": "eslint . && npm run test",
    "dev:with-tests": "concurrently \"npm run dev\" \"npm run test:watch\" \"npm run test:health\"",
    "ci:test": "npm run lint:test && npm run test:coverage && npm run build:test"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@types/jest": "^29.5.8",
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "chokidar": "^3.5.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}